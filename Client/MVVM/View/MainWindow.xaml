<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client" 
        xmlns:viewmodel="clr-namespace:Client.MVVM.ViewModel"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="MainWindow"
        Height="650" Width="1000"
        Background="#282A36"
        Foreground="#F8F8F2">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="250" MaxWidth="500"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <DockPanel Background="#44475A">
            <TextBox Height="30"
                     Margin="5"
                     DockPanel.Dock="Top"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Background="#6272A4"
                     Foreground="#F8F8F2"
                     BorderBrush="#BD93F9"
                     FontSize="14"
                     />
            <Button Height="30"
                    DockPanel.Dock="Top"
                    Content="Connect"
                    Command="{Binding ConnectToServerCommand}"
                    Background="#BD93F9"
                    Foreground="#282A36"
                    FontSize="14"
                    BorderThickness="0"/>
            <Border Background="#44475A" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <ListView ItemsSource="{Binding Users}"
                              Background="#282A36"
                              Foreground="#F8F8F2"
                              BorderBrush="#6272A4"
                              FontSize="14"
                              Height="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Username}" Margin="0,5,0,5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{Binding Messages}"
                              Background="#282A36"
                              Foreground="#F8F8F2"
                              BorderBrush="#6272A4"
                              FontSize="14"
                              Height="275"
                              Margin="0,0,0,10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Width="245" Text="{Binding}" TextWrapping="Wrap" Margin="0,5,0,5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="MessageTextBox" Text="{Binding Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#6272A4"
                                 Foreground="#F8F8F2"
                                 BorderBrush="#BD93F9"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"
                                 Width="200"/>
                        <Button Content="Send"
                                Command="{Binding SendMessageToServerCommand}"
                                Background="#BD93F9"
                                Foreground="#282A36"
                                FontSize="14"
                                Width="55"
                                Margin="10,0,0,0"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DockPanel>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      Background="#6272A4"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      ResizeBehavior="PreviousAndNext"/>

        <!-- Center Panel -->
        <StackPanel Grid.Column="2" Background="#44475A">
            <ComboBox x:Name="CategoryComboBox" Height="30" Width="200" Margin="10"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      FontSize="14"/>

            <ListView Height="300" 
                      Margin="0,0,0,10"
                      Background="#282A36"
                      Foreground="#F8F8F2"
                      BorderBrush="#6272A4"
                      FontSize="14"
                      SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                      ItemsSource="{Binding Products}">
                <ListView.Resources>
                    <!-- Style for ListView Items -->
                    <Style TargetType="ListViewItem">
                        <Setter Property="Foreground" Value="#F8F8F2" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="5" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Style.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44475A" />
                                <Setter Property="Foreground" Value="#FFFFFF" />
                            </Trigger>
                            <!-- Selected item effect -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#6272A4" />
                                <Setter Property="Foreground" Value="#FFFFFF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn 
                            Header="Product Name" 
                            Width="200"
                            DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn 
                            Header="Price" 
                            Width="100"
                            DisplayMemberBinding="{Binding Price}" />
                        <GridViewColumn 
                            Header="Stock" 
                            Width="100"
                            DisplayMemberBinding="{Binding Stock}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Margin="10">
                <TextBlock Text="Product Name:" Margin="0,5,0,5"/>
                <TextBox x:Name="NameTxt" 
                    Text="{Binding SelectedProduct.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Height="30" 
                    Width="300" 
                    Background="#6272A4" 
                    Foreground="#F8F8F2" 
                    BorderBrush="#BD93F9" 
                    FontSize="14"/>
                <TextBlock Text="Price:" Margin="0,10,0,5"/>
                <TextBox x:Name="PriceTxt" 
                    Text="{Binding SelectedProduct.Price, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                    Height="30" 
                    Width="300" 
                    Background="#6272A4" 
                    Foreground="#F8F8F2" 
                    BorderBrush="#BD93F9" 
                    FontSize="14"/>
                <TextBlock Text="Stock:" Margin="0,10,0,5"/>
                <TextBox x:Name="StockTxt" 
                    Text="{Binding SelectedProduct.Stock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Height="30" 
                    Width="300" 
                    Background="#6272A4" 
                    Foreground="#F8F8F2" 
                    BorderBrush="#BD93F9" 
                    FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Add" Width="75" Margin="5"
                        Background="#50FA7B"
                        Foreground="#282A36"
                        FontSize="14"
                        BorderThickness="0"
                        Command="{Binding AddProductCommand}"/>
                <Button Content="Edit" Width="75" Margin="5"
                        Background="#FFB86C"
                        Foreground="#282A36"
                        FontSize="14"
                        BorderThickness="0"
                        Command="{Binding UpdateProductCommand}"/>
                <Button x:Name="DeleteButton" Content="Delete" Width="75" Margin="5"
                        Background="#FF5555"
                        Foreground="#282A36"
                        FontSize="14"
                        BorderThickness="0"
                        Command="{Binding DeleteProductCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
